{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "staging-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "staging-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "staging-space": {
            "description": "The bluemix space",
            "type": "string"
        },
        "prod-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "prod-space": {
            "description": "The bluemix space",
            "type": "string"
        },
        "api-key": {
            "description": {
                "$ref": "#/messages/deploy.apiKeyDescription"
            },
            "type": "string"
        },
        "demodra-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "staging-region",
        "staging-organization",
        "staging-space",
        "prod-region",
        "prod-organization",
        "prod-space",
        "demodra-app-name",
        "api-key"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "demodra-app-name"
        },
        {
	        "type": "password",
	        "readonly": false,
	        "title": {
                "$ref": "#/messages/deploy.apiKeyTitle"
            },
	        "key": "api-key"
        }
    ]
}
